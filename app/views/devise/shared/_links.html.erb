<div class="log-link mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Me connecter", new_session_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "M'enregistrer", new_registration_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Oublié mon mot de passe ?", new_password_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "Je n'ai pas reçu de confirmation?", new_confirmation_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "Je n'ai pas reçu de nouveau mot de passe ?", new_unlock_path(resource_name) %><br />
  <% end %>
  
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= link_to "S'enregistrer avec #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
    <% end %>
  <% end %>
</div>
