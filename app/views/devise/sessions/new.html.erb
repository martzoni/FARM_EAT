<div class="form-login-center form-background" style="margin-top: 8em">
  <h2>Se connecter</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  input_html: { class: "input-clr" },
                  label_html: { class: "label-clr" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  label: "Mot de passe",
                  input_html: { class: "input-clr" },
                  label_html: { class: "label-clr" } %>
      <%= f.input :remember_me,label: "Se souvenir de moi ?",
                  label_html: { class: "label-clr" }, as: :boolean if devise_mapping.rememberable?%>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Se connecter", class: "btn btn-clr btn-lg w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
