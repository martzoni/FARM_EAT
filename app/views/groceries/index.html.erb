<div class="container" style="margin-top: 70px">
  <div class="container mx-auto" id="farm-list">
    <h1 class="my-5 list-title">Mes courses</h1>
  </div>

  <div class="container" style="margin-top: 2em">
    <% @my_groceries.each do |list| %>
      <div class="my-farm-info my-4 ">
        <div class="d-flex justify-content-between align-items-center">
          <div class="justify-content-start">
            <h4 class="mt-2"><strong>Liste de course : </strong><%= list.id %></h6>
            <h4 class="mt-2"><strong>Date : </strong><%= list.created_at %>
            <h4 class="mt-2"><strong>Mes produits : </strong></h4>
            <% list.products.each do |product| %>
              <span class="product-tag"><%= product.name %></span>
            <% end %>
          </div>
          <div>
            <%= link_to grocery_path(list), class:'text-decoration-none' do %>
            <%= image_tag "map.png", style: "background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)); padding: 4px; height: 200px; width 600px;" %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<%= @my_groceries.size %>