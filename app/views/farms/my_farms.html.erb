<div class="container" style="margin-top: 8em">
  <div class="d-flex justify-content-between">
    <div>
      <h1>Ma ferme</h1>
    </div>
    <div class="d-flex justify-content-end">
      <%= link_to "Ajouter un ferme", new_farm_path, class: "btn btn-clr orange mr-1" %>
    </div>
  </div>

  <% @my_farms.each do |my_farm| %>
    <div class="my-farm-info my-4 ">
      <div class="d-flex justify-content-start align-items-center">
        <div>
          <%= link_to farm_path(my_farm), class:'text-decoration-none' do %>
            <div class="my-farm-info-card mr-5" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= my_farm.photo.attached? ? cl_image_path(my_farm.photo.key) : asset_path('list_background.png') %>); height: 200px; width 600px;">
              <%= my_farm.name.capitalize %>
            </div>
          <% end %>
        </div>
        <div class="mt-3">
          <h4 class="mt-2"><strong>Nom : </strong><%= my_farm.name.capitalize %></h6>
          <h4 class="mt-2"><strong>Adress : </strong><%= my_farm.address %></h6>
          <h6 class="mt-2"><strong>Horaires d'ouverture : </strong><%= my_farm.open_hours %></h6>  
        </div>
      </div>
    </div>
  <% end %>
</div>